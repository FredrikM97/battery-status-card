{
  "name": "battery-status-card",
  "version": "1.0.0",
  "description": "Home Assistant card for displaying battery device states with visual configuration",
  "main": "dist/battery-status-card.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
