    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.3",
    "terser": "^5.46.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^6.0.1",
